    <body >
        <!-- NAVIGATION BAR START -->
        <%- include("nav", {active: "Home" }) %>
        <!-- NAVIGATION BAR END-->
        <!-- PROFILE START -->

        <div class="container">
            <div class="row">
                <div class="col profile">
                    <h1 class="justify-content-center profileTitle"> Profile </h1><br>
                    
                </div>
            </div><br>
            <div class="row">
                <div class="col">
                    <form id="uploads" enctype="multipart/form-data">     
                        <div class="image-upload">
                            <label class="uploadButton" for="upload">
                                upload your image
                            </label>
                            <input id="upload" type="file" name="uploadImage" multiple onchange="imageUpload(event);">
                            <div id="preview">

                            </div>
                        </div>
                        <input type="button" value="upload" onclick="send()">
                    </form>
                    <%if(messages.errorNoFile){%>
                    <div class="alert alert-danger">
                        <%=messages.errorNoFile%>
                    </div>
                    <% } %>
                </div>
            </div>
           
        <!-- PROFILE END -->
    </body>

</html>